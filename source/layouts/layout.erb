<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title %></title>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans|Patua+One|Yanone+Kaffeesatz" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "screen" %>
    <%= javascript_include_tag "all" %>
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <!--[if lt IE 8]><script src="/javascripts/pictonic.min.js"></script><![endif]-->
  </head>

  <body class="<%= page_classes %>">
    <div class="top-bar"></div>
    <%= yield %>

    <div id="scroll">
      <div id="back_to_top"><i class="fa-icon-chevron-up"></i></div>
    </div>
  </body>
</html>
